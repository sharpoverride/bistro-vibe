@page "/cuisine/{CuisineType}"
@inject IRecipeService RecipeService

<PageTitle>@CuisineType - Cămara Culinară</PageTitle>

<div class="space-y-6">
    <div class="flex items-center gap-4">
        <a href="/" class="p-2 hover:bg-gray-100 rounded-full transition-colors">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
        </a>
        <div>
            <h1 class="text-3xl font-bold text-gray-800 font-title">@CuisineType</h1>
            <p class="text-gray-500 mt-1">@(recipes?.Count ?? 0) rețete în această categorie</p>
        </div>
    </div>
    
    @if (recipes == null)
    {
        <div class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-accent"></div>
        </div>
    }
    else if (recipes.Count == 0)
    {
        <div class="text-center py-16">
            <svg class="w-24 h-24 text-gray-300 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            <h2 class="text-2xl font-bold text-gray-800 mb-2">Nu există rețete în categoria @CuisineType</h2>
            <p class="text-gray-500 mb-6">Adaugă prima rețetă în această categorie</p>
            <a href="/" class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-white rounded-xl hover:bg-red-600 transition-colors">
                Explorează Toate Rețetele
            </a>
        </div>
    }
    else
    {
        <MasonryGrid>
            @foreach (var recipe in recipes)
            {
                <div class="break-inside-avoid mb-6">
                    <RecipeCard Recipe="recipe" OnToggleFavorite="HandleToggleFavorite" />
                </div>
            }
        </MasonryGrid>
    }
</div>

@code {
    [Parameter]
    public string CuisineType { get; set; } = "";

    private List<Recipe>? recipes;
    private string? lastCuisineType;

    protected override async Task OnParametersSetAsync()
    {
        var decodedCuisine = Uri.UnescapeDataString(CuisineType);
        
        if (decodedCuisine != lastCuisineType)
        {
            lastCuisineType = decodedCuisine;
            recipes = null;
            recipes = await RecipeService.GetRecipesByCuisineAsync(decodedCuisine);
        }
    }

    private async Task HandleToggleFavorite(Guid recipeId)
    {
        try
        {
            await RecipeService.ToggleFavoriteAsync(recipeId);
            var recipe = recipes?.FirstOrDefault(r => r.Id == recipeId);
            if (recipe != null)
            {
                recipe.IsFavorite = !recipe.IsFavorite;
            }
        }
        catch
        {
            // Silent failure
        }
    }
}
