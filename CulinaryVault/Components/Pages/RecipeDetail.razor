@page "/recipes/{Id:guid}"
@inject IRecipeService RecipeService
@inject NavigationManager Navigation

<PageTitle>@(recipe?.Title ?? "Rețetă") - Cămara Culinară</PageTitle>

@if (recipe == null)
{
    <div class="flex items-center justify-center py-12">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-accent"></div>
    </div>
}
else
{
    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Hero Image -->
        <div class="relative h-64 md:h-96 bg-gray-100 rounded-2xl overflow-hidden">
            @if (!string.IsNullOrEmpty(recipe.ImageUrl))
            {
                <img src="@recipe.ImageUrl" alt="@recipe.Title" class="w-full h-full object-cover" />
            }
            else
            {
                <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
                    <svg class="w-24 h-24 text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M8.1 13.34l2.83-2.83L3.91 3.5c-1.56 1.56-1.56 4.09 0 5.66l4.19 4.18zm6.78-1.81c1.53.71 3.68.21 5.27-1.38 1.91-1.91 2.28-4.65.81-6.12-1.46-1.46-4.2-1.1-6.12.81-1.59 1.59-2.09 3.74-1.38 5.27L3.7 19.87l1.41 1.41L12 14.41l6.88 6.88 1.41-1.41L13.41 13l1.47-1.47z"/>
                    </svg>
                </div>
            }
            
            <!-- Back Button -->
            <a href="/" class="absolute top-4 left-4 p-2 bg-white/90 rounded-full shadow-md hover:bg-white transition-colors">
                <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </a>
            
            <!-- Favorite Button -->
            <button @onclick="ToggleFavorite" @ontouchend="ToggleFavorite"
                    class="absolute top-4 right-4 p-3 bg-white/90 rounded-full shadow-md hover:bg-white transition-colors active:scale-95 touch-manipulation">
                @if (recipe.IsFavorite)
                {
                    <svg class="w-6 h-6 text-accent" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                    </svg>
                }
                else
                {
                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                }
            </button>
        </div>
        
        <!-- Title & Meta -->
        <div>
            <div class="flex items-start justify-between gap-4">
                <div>
                    <span class="inline-block px-3 py-1 bg-primary/10 text-primary text-sm font-medium rounded-full mb-3">
                        @recipe.CuisineType
                    </span>
                    <h1 class="text-3xl md:text-4xl font-bold text-gray-800 font-title">@recipe.Title</h1>
                </div>
            </div>
            
            <p class="text-gray-600 mt-4 text-lg">@recipe.Description</p>
            
            <!-- Meta Cards -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-6">
                <div class="bg-white p-4 rounded-xl border border-gray-100 text-center">
                    <svg class="w-6 h-6 text-accent mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <p class="text-sm text-gray-500">Preparare</p>
                    <p class="font-bold text-gray-800">@FormatTime(recipe.PrepTime)</p>
                </div>
                <div class="bg-white p-4 rounded-xl border border-gray-100 text-center">
                    <svg class="w-6 h-6 text-accent mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
                    </svg>
                    <p class="text-sm text-gray-500">Gătit</p>
                    <p class="font-bold text-gray-800">@FormatTime(recipe.CookTime)</p>
                </div>
                <div class="bg-white p-4 rounded-xl border border-gray-100 text-center">
                    <svg class="w-6 h-6 text-accent mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <p class="text-sm text-gray-500">Porții</p>
                    <p class="font-bold text-gray-800">@currentServings</p>
                </div>
                <div class="bg-white p-4 rounded-xl border border-gray-100 text-center">
                    <svg class="w-6 h-6 text-accent mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    <p class="text-sm text-gray-500">Dificultate</p>
                    <p class="font-bold text-gray-800">@GetDifficultyLabel(recipe.Difficulty)</p>
                </div>
            </div>
        </div>
        
        <!-- Recipe Scaling -->
        <RecipeScaling BaseServings="recipe.Servings" @bind-CurrentServings="currentServings" />
        
        <!-- Ingredients -->
        <div class="bg-white rounded-2xl p-6 border border-gray-100">
            <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                Ingrediente
            </h2>
            <ul class="space-y-3">
                @foreach (var ingredient in recipe.Ingredients.OrderBy(i => i.Order))
                {
                    var scaledAmount = GetScaledAmount(ingredient.Amount);
                    <li class="flex items-center gap-3 py-2 border-b border-gray-50 last:border-0">
                        <span class="w-2 h-2 bg-accent rounded-full"></span>
                        <span class="font-medium text-gray-800">@FormatAmount(scaledAmount) @ingredient.Unit</span>
                        <span class="text-gray-600">@ingredient.Name</span>
                    </li>
                }
            </ul>
        </div>
        
        <!-- Instructions -->
        <div class="bg-white rounded-2xl p-6 border border-gray-100">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-bold text-gray-800 flex items-center gap-2">
                    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Instrucțiuni
                </h2>
                <button @onclick="OpenFocusMode" @ontouchend="OpenFocusMode"
                        class="px-4 py-2 bg-accent text-white rounded-xl hover:bg-red-600 transition-colors flex items-center gap-2 active:scale-95 touch-manipulation">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Mod Focus
                </button>
            </div>
            <ol class="space-y-4">
                @foreach (var instruction in recipe.Instructions.OrderBy(i => i.StepNumber))
                {
                    <li class="flex items-center gap-3">
                        <span class="flex-shrink-0 w-6 h-6 bg-primary text-white rounded-full flex items-center justify-center font-bold text-xs">
                            @instruction.StepNumber
                        </span>
                        <p class="text-gray-700">@instruction.Text</p>
                    </li>
                }
            </ol>
        </div>
    </div>
    
    <!-- Edit FAB -->
    <a href="/recipes/@Id/edit"
       class="fixed bottom-6 right-6 p-4 bg-accent text-white rounded-full shadow-lg hover:bg-red-600 transition-all hover:scale-110 active:scale-95 touch-manipulation z-40 flex items-center justify-center">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
    </a>
    
    <!-- Focus Mode Overlay -->
    <FocusMode Recipe="recipe" @bind-IsOpen="showFocusMode" />
}

@code {
    [Parameter]
    public Guid Id { get; set; }

    private Recipe? recipe;
    private int currentServings;
    private bool showFocusMode = false;

    protected override async Task OnInitializedAsync()
    {
        recipe = await RecipeService.GetRecipeByIdAsync(Id);
        if (recipe != null)
        {
            currentServings = recipe.Servings;
        }
    }

    private async Task ToggleFavorite()
    {
        if (recipe == null) return;
        try
        {
            await RecipeService.ToggleFavoriteAsync(recipe.Id);
            recipe.IsFavorite = !recipe.IsFavorite;
        }
        catch
        {
            // Silent failure
        }
    }

    private void OpenFocusMode()
    {
        showFocusMode = true;
    }

    private double GetScaledAmount(double originalAmount)
    {
        if (recipe == null || recipe.Servings == 0) return originalAmount;
        return Math.Round(originalAmount * currentServings / recipe.Servings, 2);
    }

    private string FormatAmount(double amount)
    {
        if (amount == Math.Floor(amount))
            return ((int)amount).ToString();
        return amount.ToString("0.##");
    }

    private string FormatTime(TimeSpan time)
    {
        if (time.TotalHours >= 1)
            return $"{(int)time.TotalHours}h {time.Minutes}min";
        return $"{(int)time.TotalMinutes} min";
    }

    private string GetDifficultyLabel(Difficulty difficulty) => difficulty switch
    {
        Difficulty.Easy => "Ușor",
        Difficulty.Medium => "Mediu",
        Difficulty.Hard => "Greu",
        Difficulty.Expert => "Expert",
        _ => "Necunoscut"
    };
}
